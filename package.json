{
    "name": "naga-ts",
    "version": "0.0.1",
    "repository": {
        "type": "github",
        "url": "https://github.com/gongzhaohui/NAGA-TS"
    },
    "license": "MIT",
    "scripts": {
        "build:ssr": "npm run build:client-and-server-bundles && npm run webpack:server",
        "serve:ssr": "node dist/.bin/server.bundle.js",
        "build:client-and-server-bundles": "ng build --prod && ng run naga-ts:server",
        "webpack:server": "webpack --config webpack.server.config.js --progress --colors",
        "ng": "ng",
        "start:ng": "ng serve",
        "build": "ng build",
        "test:ng": "ng test",
        "lint:ng": "ng lint",
        "test:e2e:ng": "ng e2e",
        "format": "prettier --write \"src/**/*.ts\"",
        "start": "ts-node -r tsconfig-paths/register src/server/main.ts",
        "start:dev": "nodemon",
        "start:debug": "nodemon --config nodemon-debug.json",
        "prestart:prod": "rimraf dist/.bin && tsc",
        "start:prod": "node dist/.bin/server.bundle.js",
        "lint": "tslint -p tsconfig.json -c tslint.json",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@angular/animations": "^6.1.0",
        "@angular/common": "^6.1.0",
        "@angular/compiler": "^6.1.0",
        "@angular/core": "^6.1.0",
        "@angular/forms": "^6.1.0",
        "@angular/http": "^6.1.0",
        "@angular/platform-browser": "^6.1.0",
        "@angular/platform-browser-dynamic": "^6.1.0",
        "@angular/platform-server": "^6.1.7",
        "@angular/router": "^6.1.0",
        "@nestjs/common": "^5.1.0",
        "@nestjs/core": "^5.1.0",
        "@nestjs/graphql": "^5.2.1",
        "@nguniversal/express-engine": "^6.1.0",
        "@nguniversal/module-map-ngfactory-loader": "^6.1.0",
        "@types/cookie-parser": "^1.4.1",
        "@types/helmet": "0.0.40",
        "apollo-server-express": "^2.0.6",
        "arangojs": "^6.6.0",
        "cookie-parser": "^1.4.3",
        "core-js": "^2.5.4",
        "graphql": "^14.0.2",
        "graphql-tools": "^3.1.1",
        "helmet": "^3.13.0",
        "joi": "^13.6.0",
        "reflect-metadata": "^0.1.12",
        "rxjs": "^6.2.2",
        "rxjs-compat": "^6.3.2",
        "zone.js": "~0.8.26"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "~0.7.0",
        "@angular/cli": "^6.2.1",
        "@angular/compiler-cli": "^6.1.0",
        "@angular/language-service": "^6.1.0",
        "@nestjs/testing": "^5.3.0",
        "@types/express": "^4.16.0",
        "@types/jasmine": "~2.8.6",
        "@types/jasminewd2": "~2.0.3",
        "@types/jest": "^23.3.1",
        "@types/node": "^10.7.1",
        "@types/supertest": "^2.0.5",
        "codelyzer": "~4.2.1",
        "jasmine-core": "~2.99.1",
        "jasmine-spec-reporter": "~4.2.1",
        "jest": "^23.5.0",
        "karma": "~1.7.1",
        "karma-chrome-launcher": "~2.2.0",
        "karma-coverage-istanbul-reporter": "~2.0.0",
        "karma-jasmine": "~1.1.1",
        "karma-jasmine-html-reporter": "^0.2.2",
        "nodemon": "^1.18.3",
        "nodemon-webpack-plugin": "^3.0.1",
        "prettier": "^1.14.2",
        "protractor": "~5.4.0",
        "rimraf": "^2.6.2",
        "supertest": "^3.1.0",
        "ts-jest": "^23.1.3",
        "ts-loader": "^5.1.0",
        "ts-node": "^7.0.1",
        "tsconfig-paths": "^3.5.0",
        "tslint": "5.11.0",
        "tslint-loader": "^3.6.0",
        "typescript": "~2.7.2",
        "webpack": "^4.16.5",
        "webpack-cli": "^3.1.0",
        "webpack-node-externals": "^1.7.2"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src/server",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
